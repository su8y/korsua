[
  /*
	 toggle panel 
	 */
  {
    "key": "escape" /* close 가 동작 안할때마다 추가해준다. */,
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "!editorFocus && !inlineSuggestionVisible && !inlineChatFocused "
  },
  /* vim show hover */
  {
    "key": "h",
    "command": "editor.action.scrollLeftHover",
    "when": "editorHoverFocused"
  },
  {
    "key": "j",
    "command": "editor.action.scrollDownHover",
    "when": "editorHoverFocused"
  },
  {
    "key": "k",
    "command": "editor.action.scrollUpHover",
    "when": "editorHoverFocused"
  },
  {
    "key": "l",
    "command": "editor.action.scrollRightHover",
    "when": "editorHoverFocused"
  },
  /* NerdTree*/
  {
    "key": "r",
    "command": "renameFile",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "d",
    "command": "deleteFile",
    "when": "focusedView == 'javaProjectExplorer' && java:serverMode == 'Standard' || filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "r",
    "command": "java.view.package.renameFile",
    "when": "focusedView == 'javaProjectExplorer' && java:serverMode == 'Standard' || filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "a",
    "command": "explorer.newFile",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },

  /* sync mac - window */
  {
    "key": "ctrl+n",
    "command": "workbench.action.quickOpenSelectNext",
    "when": " isWindows || isLinux && inQuickOpen"
  },
  {
    "key": "ctrl+p",
    "command": "workbench.action.quickOpenSelectPrevious",
    "when": " isWindows || isLinux && inQuickOpen"
  },
  {
    "key": "ctrl+n",
    "command": "selectNextCodeAction",
    "when": " isWindows || isLinux && codeActionMenuVisible"
  },
  {
    "key": "ctrl+p",
    "command": "selectPrevCodeAction",
    "when": " isWindows || isLinux && codeActionMenuVisible"
  },
  {
    "key": "ctrl+l",
    "command": "workbench.action.toggleAuxiliaryBar",
    "when": " isWindows || isLinux"
  },
  {
    "key": "ctrl+h",
    "command": "workbench.action.toggleSidebarVisibility",
    "when": " isWindows || isLinux"
  },
  {
    "key": "ctrl+p",
    "command": "workbench.action.quickOpen",
    "when": " isWindows || isLinux &&  editorHasCodeActionsProvider && textInputFocus && !editorReadonly"
  },
  {
    "key": "ctrl+n",
    "command": "-workbench.action.files.newUntitledFile",
    "when": " isWindows || isLinux"
  },
  {
    "key": "ctrl+i",
    "command": "inlineChat.start",
    "when": " isWindows || isLinux && editorFocus && inlineChatHasProvider && inlineChatPossible && !editorReadonly"
  },
  {
    "key": "ctrl+i",
    "command": "inlineChat.startWithCurrentLine",
    "when": " isWindows || isLinux && editorFocus && github.copilot.chat.editor.enableLineTrigger && inlineChatHasProvider && !editorReadonly && !inlineChatVisible"
  },
  {
    "key": "ctrl+i",
    "command": "workbench.action.terminal.chat.start",
    "when": " isWindows || isLinux && terminalChatAgentRegistered && terminalFocusInAny && terminalHasBeenCreated || terminalChatAgentRegistered && terminalFocusInAny && terminalProcessSupported"
  } /* --------------------
	end window only
	------------------------*/,
  /* mac only*/
  {
    "key": "cmd+l",
    "command": "workbench.action.toggleAuxiliaryBar"
  },
  {
    "key": "alt+cmd+b",
    "command": "-workbench.action.toggleAuxiliaryBar"
  },
  {
    "key": "cmd+h",
    "command": "workbench.action.toggleSidebarVisibility"
  },
  {
    "key": "cmd+b",
    "command": "-workbench.action.toggleSidebarVisibility"
  },
  {
    "key": "enter",
    "command": "-renameFile",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "enter",
    "command": "-java.view.package.renameFile",
    "when": "isMac && focusedView == 'javaProjectExplorer' && java:serverMode == 'Standard' || filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "cmd+`",
    "command": "workbench.action.terminal.toggleTerminal",
    "when": "isMac && terminal.active"
  },
  {
    "key": "ctrl+`",
    "command": "-workbench.action.terminal.toggleTerminal",
    "when": "isMac && terminal.active"
  },
  {
    "key": "ctrl+`",
    "command": "-workbench.action.terminal.toggleTerminal",
    "when": "isMac && terminal.active"
  },
  {
    "key": "shift+cmd+r",
    "command": "editor.action.refactor",
    "when": "isMac && editorHasCodeActionsProvider && textInputFocus && !editorReadonly"
  },
  {
    "key": "ctrl+shift+r",
    "command": "-editor.action.refactor",
    "when": "isMac && editorHasCodeActionsProvider && textInputFocus && !editorReadonly"
  } /* --------------------
	 end mac only
	 -----------------------*/
]
